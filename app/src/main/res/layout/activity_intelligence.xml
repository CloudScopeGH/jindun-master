<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cloudspace.jindun.activity.IntelligenceActivity"
    android:background="#fff">
  <RelativeLayout
      android:id="@+id/rl"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="#8b8a8a">
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/backbtn_black"
        android:clickable="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="情报上报"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textColor="#000"/>
  </RelativeLayout>
  <TextView
      android:id="@+id/activity_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="标题"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="#000000"
      android:layout_below="@id/rl"
      android:layout_marginRight="10dp"
      android:layout_marginLeft="40dp"
      android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/activity_edit"
        android:layout_toRightOf="@id/activity_title"
        android:layout_width="260dp"
        android:layout_height="30dp"
        android:layout_below="@id/rl"
        android:background="@drawable/shape_edit"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"/>
  <TextView
      android:id="@+id/activity_report"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="上报对象:"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="#000000"
      android:layout_marginTop="20dp"
      android:layout_below="@id/activity_title"
      android:layout_alignLeft="@id/activity_title"
     />
  <CheckBox
      android:id="@+id/activity_cBox1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="check"
      android:layout_marginTop="20dp"
      android:layout_below="@id/activity_report"
      android:layout_alignRight="@id/activity_edit"
      android:background="@drawable/shape_edit"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="上报领导"
      android:textColor="#000000"
      android:layout_marginTop="20dp"
      android:layout_marginLeft="30dp"
      android:layout_below="@id/activity_report"
      android:layout_alignLeft="@id/activity_title"
      />
  <CheckBox
      android:id="@+id/activity_cBox2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="check"
      android:layout_marginTop="20dp"
      android:layout_below="@id/activity_cBox1"
      android:layout_alignRight="@id/activity_edit"
      android:background="@drawable/shape_edit"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="总控制室"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="20dp"
      android:textColor="#000000"
      android:layout_below="@id/activity_cBox1"
      android:layout_alignLeft="@id/activity_title"
      />
  <TextView
      android:id="@+id/activity_particulars"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="详情内容:"
      android:textSize="20sp"
      android:textStyle="bold"
      android:textColor="#000000"
      android:layout_marginTop="20dp"
      android:layout_below="@id/activity_cBox2"
      android:layout_alignLeft="@id/activity_title"
      />
  <EditText
      android:id="@+id/activity_particulars_edit"
      android:layout_width="260dp"
      android:layout_height="150dp"
      android:layout_below="@id/activity_particulars"
      android:background="@drawable/shape_edit"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:textSize="15sp"
      android:textStyle="bold"
      android:singleLine="true"
      android:layout_marginRight="10dp"
      android:layout_marginTop="25dp"
      android:layout_marginLeft="30dp"
      android:layout_alignLeft="@id/activity_title"/>

  <ImageView
      android:id="@+id/iv01"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/head3"
      android:layout_below="@id/activity_particulars_edit"
      android:layout_marginTop="15dp"
      android:layout_alignLeft="@id/activity_particulars_edit"/>
  <ImageView
      android:id="@+id/iv02"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/head4"
      android:layout_below="@id/activity_particulars_edit"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="20dp"
      android:layout_toRightOf="@id/iv01"
      />
  <Button
      android:id="@+id/bt01"
      android:layout_width="60dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/activity_particulars_edit"
      android:layout_marginTop="15dp"
      android:layout_marginLeft="20dp"
      android:layout_toRightOf="@id/iv02"
      android:text="添加图片"
      />
  <Button
      android:id="@+id/bt02"
      android:layout_width="260dp"
      android:layout_height="50dp"
      android:layout_below="@id/iv01"
      android:layout_marginTop="15dp"
      android:text="立即汇报"
      android:layout_centerHorizontal="true"
      />

</RelativeLayout>
